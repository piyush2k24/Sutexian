<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin= "17dp"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:background="@drawable/bg_llc"
    android:backgroundTint="@color/md_theme_light_background"
    android:elevation="7dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_gravity="center"
        android:padding="2dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/UImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/piyush_frag"
            app:civ_border_color="@color/md_theme_light_primary"
            app:civ_border_width="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/UName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/md_theme_light_primary"
            android:hint="@string/user_name"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/UEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/md_theme_light_primary"
            android:hint="@string/user_email"
            android:textStyle="normal"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="3dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/UPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/md_theme_light_primary"
            android:hint="@string/user_phone"
            android:textStyle="normal"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

</LinearLayout>